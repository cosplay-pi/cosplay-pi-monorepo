{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "rush-install",
      "type": "shell",
      "command": "rush",
      "args": [
        "install"
      ],
      "problemMatcher": []
    },
    {
      "label": "rush-update",
      "type": "shell",
      "command": "rush",
      "args": [
        "update"
      ],
      "problemMatcher": []
    },
    {
      "label": "rush-build",
      "type": "shell",
      "command": "rush",
      "args": [
        "build"
      ],
      "group": {
        "kind": "build",
        "isDefault": true,
      },
      "problemMatcher": [],
      "dependsOn": [
        "rush-install"
      ]
    },
    {
      "label": "rush-rebuild",
      "type": "shell",
      "command": "rush",
      "args": [
        "rebuild"
      ],
      "problemMatcher": [],
      "dependsOn": [
        "rush-install"
      ]
    },
    {
      "label": "gen-index-ts-file",
      "type": "shell",
      "command": "${workspaceFolder}/common/autoinstallers/tools/node_modules/.bin/ts-node",
      "args": [
        "${workspaceFolder}/common/autoinstallers/tools/gen-index-ts-file-main.ts"
      ],
      "presentation": {
        "close": true,
      },
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": []
    },
    {
      "label": "run-cosplay-pi-hub-backend-prisma-studio",
      "type": "shell",
      "command": "rushx",
      "args": [
        "run-prisma-studio"
      ],
      "options": {
